@model websitestintuc.Models.Logo

@{
    ViewBag.Title = "Themlogo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Themlogo</h2>

@using (Html.BeginForm("Themlogo","Admin",FormMethod.Post,new { @enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    
