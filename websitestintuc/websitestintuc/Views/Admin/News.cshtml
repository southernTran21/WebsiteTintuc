@model IEnumerable<websitestintuc.Models.TinTuc>

@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@helper Cut(String input, int length)
    {
if(input.Length <length)
{
        @input
}
else
{
        @input.Substring(0,length)<text>...</text>
}
    }

<h2>Quản lí Tin Tức</h2>
<p>
     @Html.ActionLink("Thêm Tin Mới", "Themtinmoi")
</p>

<table class="table" border="1">
    <tr>
        <th style="width:200px">Tiêu Đề </th>
        <th style="width:320px">Miêu Tả </th>
        <th style="width:100px">Ngày Đăng </th>
        <th style="width:100px">TopList </th>
        <th style="width:200px"> Ảnh</th>
        <th style="width:100px">Link </th>
        <th style="width:50px">IDLoGo </th>
        <th style="width:50px">IDcategory </th>
        <th style="width:200px"> </th>
    </tr>
   

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Cut(item.description, 100)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.topList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagedemo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDlogo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDcategory)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
